.container{
  display: flex;
  display: -webkit-flex;
  align-items: left;
  margin: 2%;
}

.flex-container {
    display: flex;
    display: -webkit-flex;
    align-items: center;
    flex-direction: row;
}

.UserHeadImage {
    margin: 50rpx;
    margin-left: 35rpx;
    margin-right: 10rpx;
    width: 130rpx;
    height: 130rpx;
    background-color: #ffffff;
    border-radius: 50%;
}
.user-name {
    width: 150rpx;
    height: 75rpx;
    margin-left: 35rpx;
}

.Op-container{
  display: flex;
  flex-direction: row;
  align-items: left;
}

.Op-image{
  height: 50rpx;
  width: 50rpx;
  margin-left: 35rpx;
  margin-right: 20rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.Order {
    display: flex;
    margin-left: 10rpx;
    margin-right: 30rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
