/* pages/kindpage/kindpage.wxss */
.goodspage {
  height: 150rpx;
  width: 100%;
  border-bottom: 1rpx solid #e2e2e7;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.aaa {
  height: 100%;
  width: 8%;
}
.goodsimage {
  height: 100rpx;
  width: 100rpx;
  border-radius: 10rpx;
  border: 2rpx solid #dddde0;
}
.goodsdata{
  height: 100%;
  width: 180rpx;
  margin: 0 20rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.goodsname {
  height: 50rpx;
  width: 100%;
}
.goodsprice {
  height: 70rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.goodsnametext {
  font-size: 25rpx;
  font-weight: 400;
}
.goodspricetext {
  font-size: 18rpx;
  font-weight: 200;
}
.goodsdata_ {
  height: 100%;
  width: 200rpx;
  margin: 0 20rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.editor {
  height: 100%;
  width: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.button {
  height: 40rpx;
  width: 80rpx;
  display: flex;
  border-radius: 20rpx;
  border: 2rpx solid #e0e2e0;
  justify-content: center;
  align-items: center;
}
.buttontext {
  font-size: 20rpx;
  font-weight: 200;
}