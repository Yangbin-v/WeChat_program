/* pages/ginout/ginout.wxss */
.warepage {
  height: 200rpx;
  width: 100%;
  border-bottom: 1rpx solid #e2e2e7;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.wareimage {
  height: 120rpx;
  width: 120rpx;
}
.waretext {
  height: 200rpx;
  width: 180rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.name {
  font-size: 20rpx;
  font-weight: 700;
}
.addr {
  font-size: 18rpx;
  font-weight: 200;
}
.flag {
  height: 200rpx;
  width: 450rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.flaging {
  font-size: 18rpx;
  font-weight: 400;
  color: rgb(6, 145, 1);
}
.to {
  height: 40rpx;
  width: 40rpx;
}