/* pages/set/sets.wxss */
.page {
  width: 750rpx;
  height: 1500rpx;
  background-color: #ffffff;
  display: flex;
  flex-direction: column;
}
.header {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #FF3030;
  box-shadow: 0rpx 5rpx 5rpx -2rpx #FF3030;
}
.weather {
  width: 500rpx;
  height: 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #FFFFFF;
  border-radius: 10rpx;
  box-shadow: 0rpx 5rpx 5rpx -2rpx #FFD700;
}
.fenge {
  width: 100%;
  height: 80rpx;
}
.title-text {
  width: 100%;
  height: 60rpx;
  padding: 10rpx 0rpx;
  font-size: 30rpx;
  font-weight: 400;
  display: flex;
  align-items: center;
}
.line {
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: column;
}
.line-image {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.image-don {
  width: 120rpx;
  height: 120rpx;
  background-color: rgba(253, 253, 253, 0.678);
  display: flex;
  border-radius: 10rpx;
  box-shadow: 4px 4px 2px #c9c7c7;
}
.butoon-image {
  width: 120rpx;
  height: 120rpx;
}
.line-text {
  width: 100%;
  height: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}
.image-text {
  font-size: 20rpx;
  font-weight: 300;
}